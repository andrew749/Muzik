<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/PlayActionBar</item>
        <item name="showcaseViewStyle">@style/CustomShowCase</item>
    </style>

    <style name="PlayActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/actionbar_background</item>
    </style>

    <style name="CustomShowCase" parent="ShowcaseView_Dark">
        <item name="sv_backgroundColor">#B34B4B4C
        </item>
    </style>
</resources>
