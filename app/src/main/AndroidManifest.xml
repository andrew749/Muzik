<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.acod.play.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/playlogo"
        android:label="@string/app_name"
        android:logo="@drawable/playlogo"
        android:theme="@style/AppTheme">
        <provider
            android:name=".Searching.RecentSearchSuggestionProvider"
            android:authorities="com.acod.RecentSearchSuggestionProvider" />
        <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="19" />
        <service android:name=".services.MediaService" />

        <activity
            android:name=".Activities.HomescreenActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Activities.PlayerActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>

        </activity>
        <activity
            android:name=".Activities.SearchActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".Activities.SavedActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".Activities.HomescreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>

        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
